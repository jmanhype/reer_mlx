# REER × DSPy × MLX Social Posting Pack Environment Configuration
# Copy this file to .env and fill in your actual API keys and configuration

# =============================================================================
# General Application Settings
# =============================================================================
APP_NAME="REER DSPy MLX Social"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG_MODE="true"

# =============================================================================
# MLX Configuration
# =============================================================================
# MLX model path (local models)
MLX_MODEL_PATH="/path/to/your/mlx/models"
# Default model to use
MLX_DEFAULT_MODEL="mlx-community/Llama-3.2-3B-Instruct-4bit"
# MLX compute settings
MLX_MAX_TOKENS=2048
MLX_TEMPERATURE=0.7
MLX_TOP_P=0.9

# =============================================================================
# DSPy Configuration
# =============================================================================
# DSPy LM provider (mlx, openai, anthropic, etc.)
DSPY_LM_PROVIDER="mlx"
# DSPy model configuration
DSPY_MODEL_NAME="llama-3.2-3b-instruct"
DSPY_MAX_TOKENS=1024
DSPY_TEMPERATURE=0.3

# =============================================================================
# OpenAI API (if using OpenAI as LM provider)
# =============================================================================
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORG_ID="org-your-organization-id"
OPENAI_MODEL="gpt-4"

# =============================================================================
# Anthropic Claude API (if using Anthropic as LM provider)
# =============================================================================
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# =============================================================================
# Social Media Platform APIs
# =============================================================================

# Twitter/X API v2
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
TWITTER_ACCESS_TOKEN="your-twitter-access-token"
TWITTER_ACCESS_TOKEN_SECRET="your-twitter-access-token-secret"
TWITTER_BEARER_TOKEN="your-twitter-bearer-token"

# Facebook/Meta APIs
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
FACEBOOK_ACCESS_TOKEN="your-facebook-page-access-token"
FACEBOOK_PAGE_ID="your-facebook-page-id"

# Instagram Basic Display API
INSTAGRAM_APP_ID="your-instagram-app-id"
INSTAGRAM_APP_SECRET="your-instagram-app-secret"
INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"
INSTAGRAM_USER_ID="your-instagram-user-id"

# LinkedIn API
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"
LINKEDIN_ACCESS_TOKEN="your-linkedin-access-token"
LINKEDIN_PERSON_ID="your-linkedin-person-id"

# Discord Bot
DISCORD_BOT_TOKEN="your-discord-bot-token"
DISCORD_GUILD_ID="your-discord-guild-id"
DISCORD_CHANNEL_ID="your-discord-channel-id"

# Slack Bot
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_APP_TOKEN="xapp-your-slack-app-token"
SLACK_CHANNEL_ID="your-slack-channel-id"

# YouTube Data API v3
YOUTUBE_API_KEY="your-youtube-api-key"
YOUTUBE_CHANNEL_ID="your-youtube-channel-id"

# TikTok API (if available)
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"
TIKTOK_ACCESS_TOKEN="your-tiktok-access-token"

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="sqlite:///./data/reer_social.db"
# For PostgreSQL: "postgresql://user:password@localhost:5432/reer_social"
# For MySQL: "mysql://user:password@localhost:3306/reer_social"

# Redis Configuration (for caching and queue)
REDIS_URL="redis://localhost:6379/0"

# =============================================================================
# Storage Configuration
# =============================================================================
# Local storage path
LOCAL_STORAGE_PATH="./data/storage"

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_DEFAULT_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Google Cloud Storage (if using GCS)
GOOGLE_APPLICATION_CREDENTIALS="/path/to/your/gcs-credentials.json"
GCS_BUCKET_NAME="your-gcs-bucket-name"

# Azure Blob Storage (if using Azure)
AZURE_STORAGE_ACCOUNT_NAME="your-azure-storage-account"
AZURE_STORAGE_ACCOUNT_KEY="your-azure-storage-key"
AZURE_CONTAINER_NAME="your-azure-container"

# =============================================================================
# Content Generation Settings
# =============================================================================
# Default content length limits
DEFAULT_TWEET_LENGTH=280
DEFAULT_FACEBOOK_POST_LENGTH=63206
DEFAULT_INSTAGRAM_CAPTION_LENGTH=2200
DEFAULT_LINKEDIN_POST_LENGTH=3000

# Content generation parameters
CONTENT_CREATIVITY_LEVEL=0.7  # 0.0 to 1.0
CONTENT_TONE="professional"  # casual, professional, humorous, formal
CONTENT_LANGUAGE="en"  # ISO language code

# =============================================================================
# Scheduling Configuration
# =============================================================================
# Default timezone for scheduling
DEFAULT_TIMEZONE="UTC"
# Scheduler interval in seconds
SCHEDULER_INTERVAL=60
# Maximum posts per day per platform
MAX_POSTS_PER_DAY_TWITTER=50
MAX_POSTS_PER_DAY_FACEBOOK=25
MAX_POSTS_PER_DAY_INSTAGRAM=25
MAX_POSTS_PER_DAY_LINKEDIN=25

# =============================================================================
# Rate Limiting
# =============================================================================
# Rate limits per platform (requests per minute)
RATE_LIMIT_TWITTER=300
RATE_LIMIT_FACEBOOK=200
RATE_LIMIT_INSTAGRAM=200
RATE_LIMIT_LINKEDIN=100
RATE_LIMIT_DISCORD=50
RATE_LIMIT_SLACK=50

# =============================================================================
# Webhook Configuration
# =============================================================================
WEBHOOK_SECRET="your-webhook-secret-key"
WEBHOOK_PORT=8000
WEBHOOK_HOST="0.0.0.0"

# =============================================================================
# Monitoring and Analytics
# =============================================================================
# Enable analytics collection
ENABLE_ANALYTICS="true"
# Analytics provider (internal, google, mixpanel)
ANALYTICS_PROVIDER="internal"
# Google Analytics (if using GA)
GOOGLE_ANALYTICS_ID="GA-your-ga-id"
# Mixpanel (if using Mixpanel)
MIXPANEL_TOKEN="your-mixpanel-token"

# =============================================================================
# Security Settings
# =============================================================================
# JWT secret for authentication
JWT_SECRET="your-jwt-secret-key"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# API rate limiting
API_RATE_LIMIT="100/hour"
API_BURST_LIMIT="10/minute"

# CORS settings
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
CORS_CREDENTIALS="true"

# =============================================================================
# Testing Configuration
# =============================================================================
# Test mode (disables actual posting to social media)
TEST_MODE="true"
# Test database URL
TEST_DATABASE_URL="sqlite:///./data/test_reer_social.db"
# Mock external APIs in tests
MOCK_EXTERNAL_APIS="true"