{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reer-dspy-mlx/schemas/reer_trajectory.schema.json",
  "title": "REER Trajectory Triple",
  "type": "object",
  "required": ["x", "y", "z_segments", "ppl_final"],
  "properties": {
    "x": {"type": "string", "minLength": 1, "description": "Query/prompt"},
    "y": {"type": "string", "minLength": 1, "description": "Reference answer/output"},
    "z_segments": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string", "minLength": 1},
      "description": "Ordered reasoning segments"
    },
    "ppl_final": {"type": "number", "minimum": 0},
    "search_history": {"type": "array", "items": {"type": "object"}}
  }
}

